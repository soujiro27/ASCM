<header class="row Header">
		<div class="Header-logo col-lg-2">
			<img src="/SIA/jur/public/images/Logotipo.png">
		</div>

		<div class="Header-cuenta col-lg-2">
			<p>
				<i class="fas fa-archive"></i>
				{{session.sCuentaActual}}
			</p>
		</div>

		<div class="Header-modulo col-lg-3">
			<h3>
				 <i class="fas fa-desktop"></i>
				 {{nombre}}
			</h3>
		</div>

		<div class="Header-notificaciones col-lg-2">
            <a href="/SIA/notificaciones">

                {% if notificaciones > 0 %}

					<i class="far fa-bell animate"></i>

				{% else %}

				     <i class="far fa-envelope-open"></i>

                {% endif %}

                Tienes
                    {% if notificaciones > 0 %}
                        <span class="active">
                            {{notificaciones}}
                        </span>
                    {% else %}
                        <span class="inactive">
                            {{notificaciones}}
                        </span>
                    {% endif %}
                Notificaciones
            </a>
        </div>

		<div class="Header-user col-lg-3">
            <div class="Header-user-submenu">
                <ul>
                    <li>
                        <a href="/SIA/perfil">
                            <i class="far fa-user"></i>
                            Perfil
                        </a>
                    </li>
                    <li>
                        <a href="/SIA/cerrar">
                            <i class="fas fa-sign-out-alt"></i>
                            Salir
                        </a>
                    </li>
                </ul>
            </div>

            <p >
	            <i class="fas fa-user"></i>
	            {{session.sUsuario}}
	            <i class="fas fa-caret-down"></i>
        	</p>
        </div>


	</header>
